{
  "name": "unfolding-drawing-app",
  "version": "1.0.0",
  "main": "dist/index.html",
  "pear": {
    "name": "unfolding-drawing-app",
    "type": "desktop",
    "gui": {
      "backgroundColor": "#1F2430",
      "height": "540",
      "width": "720"
    }
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev:rsbuild": "rsbuild build --mode development",
    "dev": "npm-run-all --parallel \"dev:**\"",
    "prod:rsbuild": "rsbuild build --mode production",
    "prod": "npm-run-all --parallel \"prod:**\"",
    "watch:rsbuild": "npm run dev:rsbuild -- --watch",
    "watch": "run-p \"watch:**\"",
    "start": "pear run -d .",
    "check": "biome check --write",
    "format": "biome format --write",
    "test": "brittle test/*.test.js"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@rsbuild/core": "^1.5.6",
    "brittle": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "pear-interface": "^1.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@evolu/common": "^6.0.1-preview.19",
    "@evolu/web": "^1.0.1-preview.5",
    "@zag-js/core": "^1.24.2",
    "@zag-js/tooltip": "^1.24.2",
    "spellcaster": "^6.0.0"
  }
}
