{
  "name": "unfolding-drawing-app",
  "version": "1.0.0",
  "main": "index.html",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:rsbuild": "rsbuild dev",
    "dev:tailwind": "npx @tailwindcss/cli --watch -i ./src/index.css -o ./dist/output.css",
    "dev": "npm-run-all --parallel \"dev:**\"",
    "prod:rsbuild": "rsbuild build --mode production",
    "prod:tailwind": "npm run dev:tailwind -- --minify",
    "prod": "npm-run-all --parallel \"prod:**\"",
    "typecheck": "tsc --noEmit",
    "check": "tsc --noEmit && biome check --write",
    "format": "biome format --write",
    "test": "brittle test/*.test.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@rsbuild/core": "^1.5.6",
    "brittle": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@evolu/common": "^6.0.1-preview.19",
    "@evolu/web": "^1.0.1-preview.5",
    "@rsbuild/plugin-babel": "^1.0.6",
    "@rsbuild/plugin-solid": "^1.0.6",
    "@solid-primitives/event-listener": "^2.4.3",
    "@solid-primitives/keyboard": "^1.3.3",
    "@solid-primitives/pointer": "^0.3.3",
    "@tailwindcss/postcss": "^4.1.14",
    "@zag-js/core": "^1.24.2",
    "@zag-js/tooltip": "^1.24.2",
    "solid-devtools": "^0.34.4",
    "solid-js": "^1.9.9",
    "tailwindcss": "^4.1.14"
  }
}
